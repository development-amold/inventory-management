<%= stylesheet_link_tag 'login-form', media: 'all'%>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="login-form">
    <div class="main-div">
      <div class="panel">
       <h2>Admin Login</h2>
     </div>
      <form id="Login">
        <div class="form-group error-alert">
          <%- flash.each do |name, msg| -%>          
            <%= msg unless msg == "You need to sign in or sign up before continuing." %>
          <% end %>
        </div>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "Email Address", :class => "form-control" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, autocomplete: "current-password",:placeholder => "Password",:class => "form-control"  %>
        </div>
        <%= f.submit "Log in",:class => "btn btn-primary" %>  
      </form>
    </div>
  </div>
<% end %>