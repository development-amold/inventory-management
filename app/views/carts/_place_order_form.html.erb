<h3 class="text-center">User Details</h3>
<p id="div_place_order_notice" style="color:red"></p>
<%= form_tag place_order_path,:method => :post,:remote => true,:id => "place_order_form",:class => "form-horizontal" do %>
  <div class="form-group">
  	<label for="firstname" class="control-label col-sm-2">First Name</label>
    <div class="col-sm-8">
      <%= text_field_tag :firstname,"",:autofocus => true,:class => "form-control" %>
    </div>  
  </div>
  <div class="form-group">
  	<label for="lastname" class="control-label col-sm-2">Last Name</label>
    <div class="col-sm-8">
      <%= text_field_tag :lastname,"",:class => "form-control" %>
    </div>  
  </div>
  <div class="form-group">
  	<label for="email" class="control-label col-sm-2">Email</label>
    <div class="col-sm-8">
      <%= email_field_tag :email,"",:class => "form-control" %>
    </div>  
  </div>    
  <%= submit_tag 'Submit',name: nil,:class => "btn btn-primary" %>
<% end %>		